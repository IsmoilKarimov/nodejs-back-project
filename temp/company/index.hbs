<div class="main-content project">

    <div class="box ">
        <div class="box-header  pt-0">
            <div class="me-auto">
                <h4 class="card-title mb-0 fs-22">{{title}}</h4>
            </div>
            <div class="list-action">
                <a href="#" class="add" data-toggle="modal" data-target="#add_client">Yangi kompaniya<i
                        class="fas fa-plus-circle"></i></a>
            </div>
        </div>
        <div class="box-body pb-0 table-responsive activity mt-18">
            <table class="table table-vcenter text-nowrap table-bordered dataTable no-footer mw-100" id="task-profile"
                role="grid">
                <thead>
                    <tr class="top">
                        <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile"
                            rowspan="1" colspan="1" style="width: 222.312px;">Kompaniya nomi</th>
                        <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile"
                            rowspan="1" colspan="1" style="width: 222.312px;">Manzil</th>
                        <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile"
                            rowspan="1" colspan="1" style="width: 110.719px;">Telefon nomer</th>
                        <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile"
                            rowspan="1" colspan="1" style="width: 110.719px;">Email</th>
                        <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile"
                            rowspan="1" colspan="1" style="width: 110.719px;">Website</th>
                        <th class="border-bottom-0 sorting fs-14 font-w500" tabindex="0" aria-controls="task-profile"
                            rowspan="1" colspan="1" style="width: 110.719px;">Kompaniya holati</th>
                        <th class="border-bottom-0 sorting_disabled fs-14 font-w500" rowspan="1" colspan="1"
                            style="width: 145.391px;"></th>
                    </tr>
                </thead>
                <tbody>
                    {{#each companies}}
                    <tr class="odd">
                        <td>
                            <a href="#" class="d-flex align-items-center"> 
                                <img src="{{logo}}" width="50" alt="">
                                <span>{{name}}</span> 
                            </a>
                        </td>
                        <td>{{country}} | {{address}}</td>
                        <td>{{phone}}</td>
                        <td>{{email}}</td>
                        <td>{{website}}</td>
                        <td>{{{status}}}</td>
                        <td>
                            <div class="dropdown">
                                <a href="javascript:void(0);" class="btn-link" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    <i class="bx bx-dots-horizontal-rounded"></i>
                                </a>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" onclick="return confirm('Qaroringiz aniqmi?')"
                                        href="/company/delete/{{_id}}"><i class="bx bx-trash"></i>O'chirish
                                    </a>
                                    <a class="dropdown-item" onclick="edit('{{_id}}')" href="#" data-toggle="modal"
                                        data-target="#up_client">
                                        <i class="bx bx-edit mr-5"></i>Tahrirlash
                                    </a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

<div id="add_client" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Yangi kompaniya</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/company" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Kompaniya nomi</label>
                        <input type="text" name="name" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Joylashgan davlat</label>
                        <input type="text" name="country" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Manzil</label>
                        <input type="text" name="address" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Telefon nomer</label>
                        <input type="number" name="phone" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Sayt manzili</label>
                        <input type="text" name="website" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Kompaniya logosi</label>
                        <input type="file" name="logo" class="form-control" value="">
                    </div>
                    <div class="box-info-messager">
                        <div class="checkbox">
                            <input type="checkbox" name="status" value="1" checked="">
                            <span class="ml-10">Faol</span>
                        </div>
                    </div>

                    <div class="submit-section text-center">
                        <button class="btn btn-primary submit-btn">Qo'shish</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="up_client" class="modal custom-modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Kompaniya ma'lumotlarini tahrirlash</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form action="/company/save" enctype="multipart/form-data" method="post" name="editform">
                    <input type="hidden" name="_id">
                    <div class="form-group">
                        <label>Kompaniya nomi</label>
                        <input type="text" name="name" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Joylashgan davlat</label>
                        <input type="text" name="country" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Manzil</label>
                        <input type="text" name="address" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Telefon nomer</label>
                        <input type="number" name="phone" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" name="email" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Sayt manzili</label>
                        <input type="text" name="website" class="form-control" value="">
                    </div>
                    <div class="form-group">
                        <label>Kompaniya logosi</label>
                        <input type="file" name="logo" class="form-control" value="">
                    </div>
                    <div class="form-group" id="img">

                    </div>
                    <div class="box-info-messager">
                        <div class="checkbox">
                            <input type="checkbox" name="status" value="1" checked="">
                            <span class="ml-10">Faol</span>
                        </div>
                    </div>

                    <div class="submit-section text-center">
                        <button class="btn btn-primary submit-btn">Saqlash</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function edit(id) {
        let form = document.forms.editform
        let img = document.getElementById('img')
        fetch(`/company/get/${id}`)
            .then(res => res.json())
            .then(company => {          
                form._id.value = company._id
                form.name.value = company.name || 0
                form.country.value = company.country || 0
                form.address.value = company.address || 0
                form.phone.value = company.phone || 0
                form.email.value = company.email || 0
                form.website.value = company.website || 0
                form.status.checked = company.status == 1 ? true : false
                if(company.logo){
                    img.innerHTML = `
                        <img src="${company.logo}" width='50' />                        
                    `
                }
            })
    }
</script>